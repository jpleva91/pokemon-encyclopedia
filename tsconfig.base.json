      "@pokemon-encyclopedia/data-access": [
        "libs/pokemon/data-access/src/index.ts"
      ],
      "@pokemon-encyclopedia/domain": ["libs/pokemon/domain/src/index.ts"],
      "@pokemon-encyclopedia/feature-charts": [
        "libs/visualization/feature-charts/src/index.ts"
      ],
      "@pokemon-encyclopedia/feature-chat": [
        "libs/ai/feature-chat/src/index.ts"
      ],
      "@pokemon-encyclopedia/feature-card": [
        "libs/pokemon/feature-card/src/index.ts"
      ],
      "@pokemon-encyclopedia/feature-compare": [
        "libs/pokemon/feature-compare/src/index.ts"
      ],
      "@pokemon-encyclopedia/feature-detail": [
        "libs/pokemon/feature-detail/src/index.ts"
      ],
      "@pokemon-encyclopedia/feature-list": [
        "libs/pokemon/feature-list/src/index.ts"
      ],
